# Database Configuration
DB_PATH=./data/social.db
CHROMA_PATH=./data/chroma

# AI Models
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
GEN_MODEL=google/flan-t5-base

# Optional: OpenAI (if you switch models)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBED_MODEL=text-embedding-3-large
OPENAI_GEN_MODEL=gpt-4o-mini

# Reddit API Configuration
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=social-rag-trends/1.0

# RSS Feeds (comma-separated URLs)
RSS_FEEDS=https://www.reddit.com/r/news/.rss,https://www.reddit.com/r/technology/.rss,https://www.reddit.com/r/worldnews/.rss

# Alert Configuration
ALERT_WEBHOOK_URL=your_webhook_url
ALERT_EMAIL_SMTP=smtp.gmail.com
ALERT_EMAIL_USER=your_email@gmail.com
ALERT_EMAIL_PASS=your_app_password
ALERT_EMAIL_TO=alerts@yourcompany.com

# Trend Detection Thresholds
TREND_MIN_COUNT=10
TREND_WINDOW_HOURS=24
TREND_BASELINE_HOURS=168
